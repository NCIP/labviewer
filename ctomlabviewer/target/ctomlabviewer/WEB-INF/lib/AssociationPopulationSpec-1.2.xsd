<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
	xmlns:assoc="http://CQL.caBIG/2/gov.nih.nci.cagrid.cql.AssociationPopulationSpec" 
	targetNamespace="http://CQL.caBIG/2/gov.nih.nci.cagrid.cql.AssociationPopulationSpec" 
	elementFormDefault="qualified" attributeFormDefault="unqualified">
	
	<xsd:element name="AssociationPopulationSpecification" type="assoc:AssociationPopulationSpecification"/>
	<xsd:complexType name="AssociationPopulationSpecification">
		<xsd:choice>
			<xsd:element ref="assoc:PopulationDepth"/>
			<xsd:element ref="assoc:NamedAssociationList"/>
		</xsd:choice>
	</xsd:complexType>
	
	<xsd:element name="PopulationDepth" type="assoc:PopulationDepth"/>
	<xsd:complexType name="PopulationDepth">
		<xsd:sequence>
			<xsd:element name="Depth" type="xsd:int" minOccurs="0"/>
		</xsd:sequence>
		<xsd:attribute name="infinite" type="xsd:boolean" use="required"/>
	</xsd:complexType>
	
	<xsd:element name="NamedAssociationList" type="assoc:NamedAssociationList"/>
	<xsd:complexType name="NamedAssociationList">
		<xsd:sequence>
			<xsd:element ref="assoc:NamedAssociation" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:element name="NamedAssociation" type="assoc:NamedAssociation"/>
	<xsd:complexType name="NamedAssociation">
		<xsd:sequence>
			<xsd:element ref="assoc:NamedAssociation" minOccurs="0" maxOccurs="unbounded"/>
		</xsd:sequence>
		<xsd:attribute name="roleName" type="xsd:string" use="required"/>
	</xsd:complexType>
</xsd:schema>
