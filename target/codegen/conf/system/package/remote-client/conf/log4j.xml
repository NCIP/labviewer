	<logger name="gov.nih.nci">
		<level value="error" />
	</logger>
	
	<logger name="org.springframework">
		<level value="error" />
	</logger>

	<root>
		<priority value="error" />
		<appender-ref ref="CONSOLE" />
	</root>
</log4j:configuration>