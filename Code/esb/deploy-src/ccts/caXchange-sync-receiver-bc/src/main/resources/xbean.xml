<beans xmlns:http="http://servicemix.apache.org/http/1.0"
	xmlns:caxchange="http://nci.nih.gov/caXchange" xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://servicemix.apache.org/http/1.0 http://servicemix.apache.org/schema/servicemix-http-2008.01.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!--
		<http:endpoint service="caxchange:SynchronousRequestService"
		endpoint="soap" role="consumer"
		locationURI="http://localhost:8192/synchronousRequest"
		defaultMep="http://www.w3.org/2004/08/wsdl/in-out"
		wsdlResource="classpath:caXchangeSynchronousRequest.wsdl"
		targetService="caxchange:synchronousAsyncBridge" soap="true">
		</http:endpoint>
	-->
	<!--
		To make the synchronous service secured, comment the block above and
		un-comment this block .
	-->
	<http:endpoint service="caxchange:SynchronousRequestService"
		endpoint="soap" role="consumer" authMethod="BASIC" locationURI="https://localhost:8195/synchronousRequest"
		defaultMep="http://www.w3.org/2004/08/wsdl/in-out" wsdlResource="classpath:caXchangeSynchronousRequest.wsdl"
		targetService="caxchange:synchronousAsyncBridge" soap="true">
		<http:ssl>
			<http:sslParameters keyStoreType="JKS"
				keyStore="classpath:/caXchangeConf/security/server_privatestore.jks"
				keyStorePassword="keyStorePassword" keyPassword="smxServerPassword" />
		</http:ssl>		
	</http:endpoint>


	<!--
		For quick testing purposes, comment the block above and un-comment
		this block to send the request to a bean. <http:endpoint
		service="caxchange:SynchronousRequestService" endpoint="soap"
		role="consumer" soapAction="" soapVersion="1.2"
		locationURI="http://localhost:8192/synchronousRequest"
		defaultMep="http://www.w3.org/2004/08/wsdl/in-out"
		wsdlResource="classpath:caXchangeSynchronousRequest.wsdl"
		targetService="caxchange:synchronousRequestService" soap="true" />
	-->

</beans>
