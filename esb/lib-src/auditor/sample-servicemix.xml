  <!-- Add the following configuration within the servicemix.xml configuration file.
  -->
  
  <bean id="myLogger" class="gov.nih.nci.caxchange.servicemix.jbi.audit.CommonLoggingListener" init-method="doStart" >
      <property name="container"  ref="jbi" />
      <property name="logExchangesSent" value="true" />
      <property name="logExchangesAccepted" value="false" />
      <property name="filters">
       <list>
         <value>NoMatch</value>
         <value>Harsh</value>
       </list>
      </property>
  </bean>