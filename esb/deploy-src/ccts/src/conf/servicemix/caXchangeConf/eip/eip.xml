<beans xmlns:eip="http://servicemix.apache.org/eip/1.0"
       xmlns:caxchange="http://nci.nih.gov/caXchange">
       
  <!-- START - CHANGES MADE FOR SYNCHRONOUS PROCESSING -->
  	
	<!--  import the router configuration file, which has configurations
			based on the service type of the caxchange message header -->			
	<import resource="classpath:/caXchangeConf/eip/serviceTypeRouter.xml" />

	<eip:static-routing-slip service="caxchange:scheduleModificationRoute"
		endpoint="caxchange:scheduleModificationEndPoint">
		<eip:targets>
			<eip:exchange-target service="caxchange:setSubjectService" />
			<eip:exchange-target service="caxchange:payloadValidationService" />
			<eip:exchange-target service="caxchange:pscAdverseEvent" />
			<eip:exchange-target service="caxchange:generateResponseService" />
		</eip:targets>		
	</eip:static-routing-slip>
	
	<eip:static-routing-slip service="caxchange:labBasedAeRoute"
		endpoint="caxchange:labBasedAeEndPoint">
		<eip:targets>
			<eip:exchange-target service="caxchange:setSubjectService" />
			<eip:exchange-target service="caxchange:payloadValidationService" />
			<eip:exchange-target service="caxchange:caaersLoadLab" />
			<eip:exchange-target service="caxchange:generateResponseService" />
		</eip:targets>		
	</eip:static-routing-slip>
	
	<eip:static-routing-slip service="caxchange:loadLabToCDMSRoute"
		endpoint="caxchange:loadLabToCDMSEndPoint">
		<eip:targets>
			<eip:exchange-target service="caxchange:setSubjectService" />
			<eip:exchange-target service="caxchange:payloadValidationService" />
			<eip:exchange-target service="caxchange:loadLab" />
			<eip:exchange-target service="caxchange:generateResponseService" />
		</eip:targets>		
	</eip:static-routing-slip>
	
	<eip:static-routing-slip service="caxchange:ctLabDataRoute"
		endpoint="caxchange:ctLabDataEndPoint">
		<eip:targets>
			<eip:exchange-target service="caxchange:setSubjectService" />
			<eip:exchange-target service="caxchange:payloadValidationService" />
			<eip:exchange-target service="caxchange:labLoader" />
			<eip:exchange-target service="caxchange:generateResponseService" />
		</eip:targets>		
	</eip:static-routing-slip>
	
	<eip:static-routing-slip service="caxchange:studyCreationRoute"	endpoint="caxchange:studyCreationEndPoint">
		<eip:targets>
			<eip:exchange-target service="caxchange:setSubjectService" />
			<eip:exchange-target service="caxchange:payloadValidationService" />
			<eip:exchange-target service="caxchange:storeOriginalMessageService" />		
			<eip:exchange-target service="caxchange:studyCreationAsyncBridge" />
		</eip:targets>				
	</eip:static-routing-slip>
	
	<eip:static-routing-slip service="caxchange:registerSubjectRoute"	endpoint="caxchange:registerSubjectEndPoint">
		<eip:targets>
			<eip:exchange-target service="caxchange:setSubjectService" />
			<eip:exchange-target service="caxchange:payloadValidationService" />
			<eip:exchange-target service="caxchange:storeOriginalMessageService" />		
			<eip:exchange-target service="caxchange:registerSubjectAsyncBridge" />
		</eip:targets>				
	</eip:static-routing-slip>	
	
	
       <eip:static-routing-slip service="caxchange:unhandledTypeRoute"	endpoint="caxchange:unhandledTypeRouteEndPoint">
			<eip:targets>
				<eip:exchange-target service="caxchange:unhandledMessageType" />
				<eip:exchange-target service="caxchange:handleErrorResponseService" />
			</eip:targets>				
	</eip:static-routing-slip>
	
	
	<eip:async-bridge  service="caxchange:synchronousAsyncBridge"  endpoint="caxchange:synchronousAsyncBridgeEndpoint" >
	      <eip:target>
	        <eip:exchange-target service="caxchange:syncPipeline" />
	      </eip:target>
        </eip:async-bridge>
	
	<eip:pipeline service="caxchange:asyncPipeline" endpoint="caxchange:asyncPipelineEndPoint" >
	      <eip:transformer>
		<eip:exchange-target service="caxchange:serviceTypeRouter" />
	      </eip:transformer>
	      <eip:faultsTarget>
		 <eip:exchange-target service="caxchange:asyncHandleErrorResponsePipeline" />
	      </eip:faultsTarget>
	      <eip:target>
		 <eip:exchange-target service="caxchange:ResponseQueueService" />
	      </eip:target>	       
	</eip:pipeline>
	
        <eip:pipeline service="caxchange:syncPipeline" endpoint="caxchange:syncPipelineEndPoint" >
		      <eip:transformer>
			<eip:exchange-target service="caxchange:serviceTypeRouter" />
		      </eip:transformer>
		      <eip:faultsTarget>
			 <eip:exchange-target service="caxchange:syncHandleErrorResponsePipeline" />
		      </eip:faultsTarget>
		      <eip:target>
			 <eip:exchange-target service="caxchange:synchronousAsyncBridge" />
		      </eip:target>	       
	</eip:pipeline>
	
	  <!-- Pipeline to create an error response and forward it to JMS outbound queue -->
	  <eip:pipeline service="caxchange:asyncHandleErrorResponsePipeline" endpoint="asyncHandleErrorResponsePipelineEndpoint">
	      <eip:transformer>
	        <eip:exchange-target service="caxchange:handleErrorResponseService" />
	      </eip:transformer>
	      <eip:target>
	        <eip:exchange-target service="caxchange:ResponseQueueService" />
	      </eip:target>
          </eip:pipeline>
          
          <eip:pipeline service="caxchange:syncHandleErrorResponsePipeline" endpoint="syncHandleErrorResponsePipelineEndpoint">
	  	      <eip:transformer>
	  	        <eip:exchange-target service="caxchange:handleErrorResponseService" />
	  	      </eip:transformer>
	  	      <eip:target>
	  	        <eip:exchange-target service="caxchange:synchronousAsyncBridge" />
	  	      </eip:target>
          </eip:pipeline>

	
  <!-- END - CHANGES MADE FOR SYNCHRONOUS PROCESSING -->
       

  <!-- Pipeline to rollback -->
  <eip:pipeline service="caxchange:rollbackPipeline" endpoint="rollbackPipelineEndpoint">
      <eip:transformer>
        <eip:exchange-target service="caxchange:setSubjectService" />
      </eip:transformer>
      <eip:target>
        <eip:exchange-target service="caxchange:MessageTypeRouter" />
      </eip:target>
  </eip:pipeline>
  
    <!-- Pipeline for Aggregating response -->
    <eip:pipeline service="caxchange:aggregateResponsePipeline" endpoint="aggregateResponsePipelineEndpoint">
        <eip:transformer>
          <eip:exchange-target service="caxchange:aggregatorListener" />
        </eip:transformer>
        <eip:target>
          <eip:exchange-target service="caxchange:aggregatedResponseRouter" />
        </eip:target>
      <eip:faultsTarget>
         <eip:exchange-target service="caxchange:handleErrorResponsePipeline" />
       </eip:faultsTarget>        
  </eip:pipeline>
  
  
  <!-- Static recipient lists for each type of message -->
  
  <import resource="classpath:/caXchangeConf/eip/registerSubjectRecipients.xml" /> 

  <import resource="classpath:/caXchangeConf/eip/studyCreationRecipients.xml" /> 
    
  <!--- EIP components for invoking the PSC  -->
  
  <eip:content-based-router service="caxchange:pscRouter" endpoint="pscRouterEndpoint">
      <eip:rules>
        <eip:routing-rule>
          <eip:predicate>
            <eip:xpath-predicate xpath="count(/caxchange:caXchangeRequestMessage/caxchange:metadata[caxchange:operation='ROLLBACK']) = 1" namespaceContext="#nsContext"/>
          </eip:predicate>
          <eip:target>
            <eip:exchange-target service="caxchange:pscRollback" />
          </eip:target>
        </eip:routing-rule>
        <eip:routing-rule>
          <eip:target>
            <eip:exchange-target service="caxchange:callPscPipeline" />
          </eip:target>
        </eip:routing-rule>
      </eip:rules>
  </eip:content-based-router>
  
  <eip:pipeline service="caxchange:callPscPipeline" endpoint="callPscPipelineEndpoint">
      <eip:transformer>
        <eip:exchange-target service="caxchange:pscProcess" />
      </eip:transformer>
      <eip:target>
        <eip:exchange-target service="caxchange:caxchangeResponseAggregator" />
      </eip:target>
  </eip:pipeline>
  
  <!-- EIP Aggregator -->
  <eip:caxchangeAggregator service="caxchange:caxchangeResponseAggregator" endpoint="caxchangeResponseAggregatorEndpoint" timeOut="300000">
         <eip:target>
           <eip:exchange-target service="caxchange:aggregateResponsePipeline"  />
        </eip:target>
  </eip:caxchangeAggregator>
  
  
 
  
  <!--  EIP send response for unhandled message type -->
  
  <eip:pipeline service="caxchange:callUnhandledMessageType" endpoint="callUnhandledMessageTypeEndpoint">
      <eip:transformer>
        <eip:exchange-target service="caxchange:unhandledMessageType" />
      </eip:transformer>
      <eip:target>
        <eip:exchange-target service="caxchange:handleErrorResponsePipeline" />
      </eip:target>
  </eip:pipeline>
  
    <eip:namespace-context id="nsContext">
      <eip:namespaces>
        <eip:namespace prefix="caxchange">http://caXchange.nci.nih.gov/messaging</eip:namespace>
      </eip:namespaces>
  </eip:namespace-context>


</beans>
