<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:saxon="http://servicemix.apache.org/saxon/1.0"
       xmlns:caxchange="http://nci.nih.gov/caXchange"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://servicemix.apache.org/saxon/1.0 http://servicemix.apache.org/schema/servicemix-saxon-3.2.2.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="caxchangeProps"
    class="org.springframework.beans.factory.config.PropertiesFactoryBean">
    <property name="location">
      <value>classpath:caxchange.properties</value>
    </property>
  </bean>
    

  <!-- START SNIPPET: xslt --> 
  <saxon:xslt service="caxchange:IdentifiedOrganizationSearchCriteriaXslt" endpoint="IdentifiedOrganizationSearchCriteriaEndpoint"
              resource="classpath:/caXchangeConf/transform/IdentifiedOrganizationSearchCriteria.xsl" />
              
  <saxon:xslt service="caxchange:OrganizationIdCriteriaXslt" endpoint="OrganizationIdCriteriaEndpoint"
              resource="classpath:/caXchangeConf/transform/OrganizationIdCriteria.xsl" />              
              
  <saxon:xslt service="caxchange:IdentifiedPersonSearchCriteriaXslt" endpoint="IdentifiedPersonSearchCriteriaEndpoint"
              resource="classpath:/caXchangeConf/transform/IdentifiedPersonSearchCriteria.xsl" />
              
  <saxon:xslt service="caxchange:PersonIdCriteriaXslt" endpoint="PersonIdCriteriaEndpoint"
              resource="classpath:/caXchangeConf/transform/PersonIdCriteria.xsl" />
              
  <saxon:xslt service="caxchange:CXFWrapperEditIncomingXslt" endpoint="CXFWrapperEditIncomingEndpoint"
              resource="classpath:/caXchangeConf/transform/CXFWrapperEditIncoming.xsl" />
              
  <saxon:xslt service="caxchange:CXFWrapperEditOutgoingXslt" endpoint="CXFWrapperEditOutgoingEndpoint"
              resource="classpath:/caXchangeConf/transform/CXFWrapperEditOutgoing.xsl" />
              
  <saxon:xslt service="caxchange:MailNotificationXslt" endpoint="MailNotificationXsltEndpoint"
              resource="classpath:/caXchangeConf/transform/EmailNotification.xsl" />              
              
  <!-- END SNIPPET: xslt --> 
  

</beans>