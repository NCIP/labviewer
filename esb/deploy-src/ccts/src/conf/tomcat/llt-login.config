#Add this data source information of caxchange to the login.config file #
#if id doesn't exist by creating one in the tomcat you are deploying LLT#
#Do not include these comment lines in the login.config file#

CLM
{
	gov.nih.nci.security.authentication.loginmodules.RDBMSLoginModule required
	driver="com.mysql.jdbc.Driver"
	url="jdbc:mysql://@LLT_DATABASE_HOST@:@LLT_DATABASE_PORT@/@LLT_DATABASE@"
	user="@LLT_DATABASE_USERNAME@"
	passwd="@LLT_DATABASE_PASSWORD@"
	query="SELECT * FROM CSM_USER WHERE LOGIN_NAME=? and PASSWORD=?"
	encryption-enabled=YES;
};