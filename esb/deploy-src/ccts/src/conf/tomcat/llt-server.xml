#Put this llt context information inbetween the host tag of server.xml in tomcat where you are deploying LLT#
			<Context path="/llt" docBase="llt">
					<Resource name="CLMDS" auth="Container" type="javax.sql.DataSource" className="org.apache.commons.dbcp.BasicDataSource"/>
					<ResourceParams name="CLMDS">
						<parameter>
							<name>factory</name>
							<value>org.apache.commons.dbcp.BasicDataSourceFactory</value>
						</parameter>
						<parameter>
							<name>driverClassName</name>
							<value>org.gjt.mm.mysql.Driver</value>
						</parameter>
						<parameter>
							<name>url</name>
							<value>jdbc:mysql://@LLT_DATABASE_HOST@:@LLT_DATABASE_PORT@/@LLT_DATABASE@</value>
						</parameter>
						<parameter>
							<name>username</name>
							<value>@LLT_DATABASE_USERNAME@</value>
						</parameter>
						<parameter>
							<name>password</name>
							<value>@LLT_DATABASE_PASSWORD@</value>
						</parameter>
						<parameter>
							<name>maxActive</name>
							<value>20</value>
						</parameter>
						<parameter>
							<name>maxIdle</name>
							<value>10</value>
						</parameter>
						<parameter>
							<name>maxWait</name>
							<value>-1</value>
						</parameter>
					</ResourceParams>
					<Resource name="CLMCSMDS" auth="Container" type="javax.sql.DataSource" className="org.apache.commons.dbcp.BasicDataSource"/>
					<ResourceParams name="CLMCSMDS">
						<parameter>
							<name>factory</name>
							<value>org.apache.commons.dbcp.BasicDataSourceFactory</value>
						</parameter>
						<parameter>
							<name>driverClassName</name>
							<value>org.gjt.mm.mysql.Driver</value>
						</parameter>
						<parameter>
							<name>url</name>
							<value>jdbc:mysql://@LLT_DATABASE_HOST@:@LLT_DATABASE_PORT@/@LLT_DATABASE@</value>
						</parameter>
						<parameter>
							<name>username</name>
							<value>@LLT_DATABASE_USERNAME@</value>
						</parameter>
						<parameter>
							<name>password</name>
							<value>@LLT_DATABASE_PASSWORD@</value>
						</parameter>
						<parameter>
							<name>maxActive</name>
							<value>20</value>
						</parameter>
						<parameter>
							<name>maxIdle</name>
							<value>10</value>
						</parameter>
						<parameter>
							<name>maxWait</name>
							<value>-1</value>
						</parameter>
					</ResourceParams>
				</Context>

     
